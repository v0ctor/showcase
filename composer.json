{
    "name": "v0ctor/showcase",
    "license": "MIT",
    "type": "project",
    "homepage": "https://victordiaz.me",
    "authors": [
        {
            "name": "Víctor Díaz Marco",
            "email": "victor@diazmarco.me",
            "homepage": "https://victordiaz.me"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-intl": "*",
        "fideloper/proxy": "~4.0",
        "htmlmin/htmlmin": "^5.7",
        "laravel/framework": "5.7.*",
        "mariuzzo/laravel-js-localization": "^1.4"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "laravel/tinker": "~1.0",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "^7.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "[ -f vendor/bin/artisan ] || ln -s ../../artisan vendor/bin/artisan",
            "@php artisan package:discover --ansi"
        ]
    }
}
